{% extends 'base.html.twig' %}

{% block title %}Ajouter un Utilisateur{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .form-group {
        @apply space-y-1 mb-4;
    }
    .form-label {
        @apply block text-sm font-medium text-gray-700;
    }
    .form-input {
        @apply mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm;
    }
    .form-error {
        @apply mt-2 text-sm text-red-600;
    }
    .btn-primary {
        @apply inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500;
    }
    .btn-secondary {
        @apply inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500;
    }
</style>
{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-50 py-12">
        <div class="max-w-2xl mx-auto sm:px-6 lg:px-8">
            <div class="bg-white overflow-hidden shadow-sm sm:rounded-lg">
                <div class="p-6 bg-white border-b border-gray-200">
                    <div class="flex items-center justify-between mb-6">
                        <h1 class="text-2xl font-semibold text-gray-900">
                            <i class="fas fa-user-plus text-indigo-600 mr-2"></i>
                            Ajouter un Utilisateur
                        </h1>
                        <a href="{{ path('admin_user_list') }}" class="btn-secondary">
                            <i class="fas fa-arrow-left mr-2"></i>
                            Retour
                        </a>
                    </div>

                    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                        <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
                            <div class="form-group">
                                {{ form_label(form.firstname, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.firstname, {'attr': {'class': 'form-input'}}) }}
                                {{ form_errors(form.firstname, {'attr': {'class': 'form-error'}}) }}
                            </div>

                            <div class="form-group">
                                {{ form_label(form.lastname, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.lastname, {'attr': {'class': 'form-input'}}) }}
                                {{ form_errors(form.lastname, {'attr': {'class': 'form-error'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-input'}}) }}
                            {{ form_errors(form.email, {'attr': {'class': 'form-error'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.password, {'attr': {'class': 'form-input'}}) }}
                            {{ form_errors(form.password, {'attr': {'class': 'form-error'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.roles, 'Rôles', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.roles, {'attr': {'class': 'form-input'}}) }}
                            {{ form_errors(form.roles, {'attr': {'class': 'form-error'}}) }}
                        </div>

                        <div class="flex justify-end space-x-3">
                            <a href="{{ path('admin_user_list') }}" class="btn-secondary">Annuler</a>
                            <button type="submit" class="btn-primary">
                                <i class="fas fa-save mr-2"></i>
                                Enregistrer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}