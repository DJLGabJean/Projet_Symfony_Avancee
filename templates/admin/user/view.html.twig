{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .btn-primary {
        @apply inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500;
    }
    .btn-secondary {
        @apply inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500;
    }
    .table-header {
        @apply px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider;
    }
    .table-cell {
        @apply px-6 py-4 whitespace-nowrap text-sm text-gray-900;
    }
</style>
{% endblock %}

{% block body %}
    {# Header #}
    <header class="bg-white shadow">
        <div class="max-w-7xl mx-auto px-4 py-6 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center">
                <h1 class="text-3xl font-bold text-gray-900 flex items-center gap-3">
                    <i class="fas fa-users text-indigo-600"></i>
                    Gestion des Utilisateurs
                </h1>
                <a href="{{ path('admin_user_add', {newId: newId} )}}" class="btn-primary">
                    <i class="fas fa-user-plus mr-2"></i>
                    Nouvel Utilisateur
                </a>
            </div>
        </div>
    </header>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        {# Flash Messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="mb-4 rounded-md p-4 {% if label == 'success' %}bg-green-50 text-green-700{% else %}bg-red-50 text-red-700{% endif %}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {# Search Bar #}
        <div class="mb-6">
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="fas fa-search text-gray-400"></i>
                </div>
                <input type="text" 
                       id="searchUser"
                       class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                       placeholder="Rechercher un utilisateur...">
            </div>
        </div>

        {# Users Table #}
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="table-header">Nom Complet</th>
                        <th scope="col" class="table-header">Email</th>
                        <th scope="col" class="table-header">Rôles</th>
                        <th scope="col" class="table-header">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for user in users %}
                        <tr>
                            <td class="table-cell">
                                {{ user.firstname }} {{ user.lastname }}
                            </td>
                            <td class="table-cell">
                                {{ user.email }}
                            </td>
                            <td class="table-cell">
                                {% for role in user.roles %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {% if role == 'ROLE_ADMIN' %}bg-red-100 text-red-800{% else %}bg-green-100 text-green-800{% endif %}">
                                        {{ role|replace({'ROLE_': ''}) }}
                                    </span>
                                {% endfor %}
                            </td>
                            <td class="table-cell">
                                <div class="flex space-x-2">
                                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn-secondary">
                                        <i class="fas fa-edit mr-2"></i>
                                        Modifier
                                    </a>
                                    <form method="POST" action="{{ path('admin_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');" class="inline">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                        <button type="submit" class="btn-secondary text-red-600 hover:text-red-700">
                                            <i class="fas fa-trash-alt mr-2"></i>
                                            Supprimer
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.getElementById('searchUser').addEventListener('input', function(e) {
    const searchText = e.target.value.toLowerCase();
    const rows = document.querySelectorAll('tbody tr');
    
    rows.forEach(row => {
        const text = row.textContent.toLowerCase();
        row.style.display = text.includes(searchText) ? '' : 'none';
    });
});
</script>
{% endblock %}
